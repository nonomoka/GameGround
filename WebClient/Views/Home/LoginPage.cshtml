
@{
    Layout = null;
}

 <!-- Modal content-->
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h2><span class="glyphicon glyphicon-lock"></span> Login</h2>
        @*<hr class="colorgraph" />*@
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="form-group">
                    <label for="usrname"><span class="glyphicon glyphicon-user"></span>&nbsp; 帳號</label>
                    <input type="text" class="form-control" id="usrname" placeholder="請輸入帳號">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="form-group">
                    <label for="psw"><span class="glyphicon glyphicon-eye-open"></span>&nbsp; 密碼</label>
                    <input type="text" class="form-control" id="psw" placeholder="請輸入密碼">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="checkbox">
                    <label><input type="checkbox" value="" checked>記住密碼</label>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-off"></span>登入</button>
    </div>
</div>
